<div class="d-flex flex-column h-100">
    <!-- Top navigation -->
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" href="~/">
                <i class="bi bi-journal-richtext"></i> @I18n.Welcome
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" asp-area="Libraries" asp-page="/Collection/Index">
                <i class="bi bi-book"></i> @I18n.YourCollection
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" asp-area="Libraries" asp-page="/Downloads/Index">
                <i class="bi bi-cloud-download"></i> @I18n.Download
            </a>
        </li>
    </ul>

    <hr class="my-4" />
    <h6 class="text-uppercase text-muted px-3 mb-2">
        <i class="bi bi-gear-fill me-2"></i> @I18n.Settings
    </h6>

    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" asp-area="Settings" asp-page="/CrawlerAgents/Index">
                <i class="bi bi-puzzle"></i> @I18n.CrawlerAgents
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" asp-area="Settings" asp-page="/Add-ons/Index">
                <i class="bi bi-node-plus-fill"></i> @I18n.Addons
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" href="~/Worker">
                <i class="bi bi-bar-chart-steps"></i> @I18n.BackgroundJobs
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" asp-area="Settings" asp-page="/AuditTrail/Index">
                <i class="bi bi-body-text"></i> @I18n.LogStream
            </a>
        </li>
    </ul>

    <!-- Bottom buttons -->
    <div class="mt-auto">
        <div class="nav flex-column m-1 mb-2">
            <partial name="_LanguageSelector" />
        </div>
        <div class="nav flex-column m-1 mb-3">
            <partial name="_FamilySafe" />
        </div>
    </div>
</div>