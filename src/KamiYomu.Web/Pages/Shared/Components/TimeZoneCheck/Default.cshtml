<div hx-post="/Index?handler=SetTimeZone"
     hx-trigger="load[checkTimeZoneCookie()]"
     hx-swap="none"
     hx-vals="js:{ tz: Intl.DateTimeFormat().resolvedOptions().timeZone }">
</div>

<script>
    function checkTimeZoneCookie() {
        return !document.cookie.split(';').some(c => c.trim().startsWith('UserTimeZone='));
    }
</script>
