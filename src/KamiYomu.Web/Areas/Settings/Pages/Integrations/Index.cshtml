@page
@model KamiYomu.Web.Areas.Settings.Pages.Integrations.IndexModel
@{
}
<div class="d-flex justify-content-between align-items-center m-3">
    <h2 class="h5 mb-0 text-primary">
        <i class="bi bi-puzzle me-3" aria-hidden="true"></i>
        @I18n.Integrations
    </h2>
</div>


<div class="container mt-4">
    <div class="row g-4">

        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-bell-fill me-2 fs-5"></i>
                    <h5 class="mb-0">@I18n.NotificationProviders</h5>
                </div>

                <div class="card-body">
                    <div class="accordion" id="notificationProviders">

                        <partial name="_GotifyIntegration" model="Model.GotifyIntegrationInput" />

                    </div>
                </div>
            </div>
        </div>

        <!-- External Readers -->
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white d-flex align-items-center">
                    <i class="bi bi-book-half me-2 fs-5"></i>
                    <h5 class="mb-0">@I18n.ExternalReaders</h5>
                </div>

                <div class="card-body">
                    <div class="accordion" id="externalReaders">
                        <partial name="_KavitaIntegration" model="Model.KavitaIntegrationInput" />
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Styles {

    <style>
        img.img-header {
            height: 2.5em;
        }

    </style>

}

