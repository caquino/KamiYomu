@page
@model KamiYomu.Web.Areas.Settings.Pages.Add_ons.Dialogs.ListSourceDialogModel
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">
        <i class="bi bi-terminal me-3" aria-hidden="true"></i>
        @I18n.Sources
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body text-center">
    <div class="d-flex justify-content-between align-items-center m-3">
        <div class="btn-toolbar">
            <div class="btn-group">
                <a asp-area="Settings" asp-page="/Add-ons/Edit"
                   class="btn btn-sm btn-outline-secondary"
                   title="@I18n.Add"
                   aria-label="@I18n.Add">
                    <i class="bi bi-plus-circle me-1"></i> @I18n.Add
                </a>
            </div>
        </div>
    </div>

    @if (Model.Sources.Any())
    {
        <div class="list-group">
            @foreach (var source in Model.Sources)
            {
                <div class="list-group-item d-flex justify-content-between align-items-start flex-wrap">
                    <div class="me-3">
                        <div><strong>@source.DisplayName</strong></div>
                        <div>
                            <a href="@source.Url" target="_blank">@source.Url</a>
                        </div>
                        @if (!string.IsNullOrEmpty(source.UserName))
                        {
                            <div class="text-muted">User: @source.UserName</div>
                        }
                    </div>
                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                    type="button"
                                    id="actionsDropdown"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-gear"></i> @I18n.Actions
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="actionsDropdown">
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Settings"
                                       asp-page="/Add-ons/Edit"
                                       asp-route-id="@source.Id">
                                        <i class="bi bi-pencil-square me-2"></i> @I18n.Edit
                                    </a>
                                </li>
                                <li>
                                    <button class="dropdown-item text-danger"
                                            title="@I18n.Delete"
                                            aria-label="@I18n.Delete"
                                            hx-get="/Settings/Add-ons/Dialogs/DeleteConfirm?id=@source.Id"
                                            hx-target="#sub-modal-body"
                                            hx-swap="innerHTML"
                                            data-bs-toggle="modal"
                                            data-bs-target="#sub-modal">
                                        <i class="bi bi-trash me-2"></i> @I18n.Delete
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-4">
            <p class="text-muted mb-2">@I18n.NoSources</p>
            <a asp-area="Settings" asp-page="/Add-ons/Edit" class="btn btn-outline-primary btn-sm">
                @I18n.Add
            </a>
        </div>
    }
</div>


