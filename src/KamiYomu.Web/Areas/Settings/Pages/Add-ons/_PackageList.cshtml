@using KamiYomu.Web.AppOptions
@using KamiYomu.Web.Areas.Settings.Pages.Add_ons.ViewModels
@model PackageListViewModel

@if (Model.Packages.Any())
{
    foreach (var packageInfo in Model.Packages)
    {
        <div class="row mb-1">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <!-- Icon on the left -->
                        <div class="me-3">
                            <img src="@packageInfo.IconUrl" alt="Package Icon" class="img-fluid" style="height: 64px;" />
                        </div>

                        <!-- Package details in the center -->
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-1">@packageInfo.Id</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <i class="bi bi-123 me-3"></i>
                                @I18n.Version:
                                @packageInfo.Version</h6>
                            <p class="card-text mb-1">
                                <i class="bi bi-text-paragraph me-3"></i>
                                @packageInfo.Description
                            </p>
                            <div class="d-flex flex-wrap align-items-center gap-3 mb-2">
                                <span class="d-flex align-items-center text-muted">
                                    <i class="bi bi-person-badge-fill me-2"></i>
                                    <strong class="me-1">@I18n.Authors:</strong>
                                    @string.Join(", ", packageInfo.Authors)
                                </span>
                                <span class="d-flex align-items-center text-muted">
                                    <i class="bi bi-cloud-download me-2"></i>
                                    <strong class="me-1">@I18n.TotalDownloads:</strong>
                                    @packageInfo.TotalDownloads
                                </span>
                            </div>

                            <div class="d-flex flex-wrap gap-3 align-items-center mt-2">
                                <a href="@packageInfo.RepositoryUrl" target="_blank" class="text-decoration-none text-primary">
                                    <i class="bi bi-box-seam me-1"></i> Repository
                                </a>
                                <a href="@packageInfo.LicenseUrl" target="_blank" class="text-decoration-none text-primary">
                                    <i class="bi bi-file-earmark-text me-1"></i> @I18n.License
                                </a>
                            </div>
                        </div>

                        <div class="ms-3 d-flex align-items-center">
                            <form method="post" asp-page-handler="Install"
                                  asp-route-packageId="@packageInfo.Id"
                                  asp-route-packageVersion="@packageInfo.Version"
                                  asp-route-sourceId="@Model.SourceId">
                                  @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="bi bi-download me-1"></i> @I18n.Install
                                </button>
                            </form>

                            <div id="download-message-@packageInfo.Id"></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

}
else
{
    <div class="alert alert-info" role="alert">
        @I18n.NoAddonsAvailable
    </div>
}

<iframe name="download-frame" style="display:none;"></iframe>