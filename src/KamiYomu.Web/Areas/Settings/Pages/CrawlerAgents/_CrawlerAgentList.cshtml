@using KamiYomu.Web.AppOptions
@using KamiYomu.Web.Entities
@model IEnumerable<CrawlerAgent>
<table class="table table-striped table-hover table-sm align-middle">
    <thead>
        <tr>
            <th scope="col">@I18n.Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                using var crawlerInstance = item.GetCrawlerInstance();
                var faviconUrl = await crawlerInstance.GetFaviconAsync(CancellationToken.None);
                <tr>
                    <td>
                        <img src="@faviconUrl.ToInternalImageUrl()" width="20" class="me-2" alt="favicon" />
                        @item.DisplayName
                    </td>
                    <td>
                        <div class="mt-auto d-flex justify-content-end">
                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-gear me-2"></i> @I18n.Actions
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <button class="dropdown-item"
                                            title="@I18n.Details"
                                            aria-label="View details"
                                            hx-get="@Url.Page("/CrawlerAgents/Dialogs/CrawlerAgentDetails", 
                                                    new {
                                                        area = "Settings",
                                                        item.Id
                                                    })"
                                            hx-target="#modal-body"
                                            hx-swap="innerHTML"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modal">
                                        <i class="bi bi-info-circle me-1"></i> @I18n.Details
                                    </button>
                                </li>

                                <li>
                                    <a asp-area="Settings" asp-page="/CrawlerAgents/Edit/Index" asp-route-id="@item.Id"
                                       class="dropdown-item"
                                       title="@I18n.Edit"
                                       aria-label="@I18n.Edit">
                                        <i class="bi bi-pencil me-1"></i> @I18n.Edit
                                    </a>
                                </li>
                                <li>
                                    <button class="dropdown-item bg-danger text-light"
                                            title="@I18n.Delete"
                                            aria-label="@I18n.Delete"
                                            hx-get="/Settings/CrawlerAgents/Dialogs/DeleteConfirm?id=@item.Id"
                                            hx-target="#modal-body"
                                            hx-swap="innerHTML"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modal">
                                        <i class="bi bi-trash me-1"></i> @I18n.Delete
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">
                    <div class="text-center py-4">
                        <p class="text-muted mb-2">
                            @I18n.NoCrawlerAgent
                        </p>
                        <a asp-area="Settings" asp-page="/CrawlerAgents/Create/Index" class="btn btn-outline-primary btn-sm">
                            @I18n.AddCrawlerAgentToGetStarted
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
