@page
@using KamiYomu.Web.Extensions
@model KamiYomu.Web.Areas.Libraries.Pages.Download.IndexModel

@section Scripts {
    <script>
        function selectSite(id, label, faviconUrl) {
          document.getElementById('selectedAgent').value = id;
          document.getElementById('selectedAgentLabel').textContent = label;
          document.getElementById('selectedAgentFavicon').src = faviconUrl;
          document.getElementById('searchInput').dispatchEvent(new Event('change'));
        }
    </script>
}


<div class="d-flex justify-content-between align-items-center m-3">
    <h2 class="h5 mb-0 text-primary">
        <i class="bi bi-cloud-download me-3" aria-hidden="true"></i>
        @I18n.Download
    </h2>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a asp-area="Settings"
               asp-page="/Add-ons/Index"
               class="btn btn-sm btn-outline-secondary"
               title="@I18n.Addons"
               aria-label="@I18n.Addons">
                <i class="bi bi-node-plus me-2"></i> @I18n.Addons
            </a>
            <a asp-area="Settings"
               asp-page="/CrawlerAgents/Index"
               class="btn btn-sm btn-outline-secondary"
               title="@I18n.CrawlerAgents"
               aria-label="@I18n.CrawlerAgents">
                <i class="bi bi-puzzle me-2"></i> @I18n.CrawlerAgents
            </a>
            <a asp-area="Libraries"
               asp-page="/Collection/Index"
               class="btn btn-sm btn-outline-secondary"
               title="@I18n.Collection"
               aria-label="@I18n.Collection">
                <i class="bi bi-book me-2"></i> @I18n.Collection
            </a>
        </div>
    </div>
</div>

<div class="container py-4">

    <div class="mb-4">
        <form class="row g-2 align-items-stretch"
              hx-get="/Libraries/Collection/SearchResults?handler=crawler"
              hx-target="#search-results"
              hx-include="#selectedAgent">

            @Html.AntiForgeryToken()

            <!-- Dropdown agent selector -->
            <div class="col-12 col-md-3">
                <div class="dropdown w-100">
                    <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center w-100"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <img src="/images/favicon.png" id="selectedAgentFavicon" width="20" class="me-2" />
                        <span id="selectedAgentLabel" class="text-truncate">@I18n.SelectCrawlerAgent</span>
                    </button>
                    <ul class="dropdown-menu w-md-auto">
                        @foreach (var agent in Model.CrawlerAgents)
                        {
                            var faviconUrl = await agent.GetCrawlerInstance().GetFaviconAsync(CancellationToken.None);

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="#"
                                   onclick="selectSite('@agent.Id', '@agent.DisplayName', '@faviconUrl.ToInternalImageUrl()')">
                                    <img src="@faviconUrl.ToInternalImageUrl()" width="20" class="me-2" />
                                    @agent.DisplayName
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Search input -->
            <div class="col-12 col-md-6">
                <input type="text"
                       class="form-control w-100"
                       placeholder="@I18n.SearchManga"
                       name="query"
                       id="searchInput"
                       oninput="if (!document.getElementById('selectedAgent').value) this.form.removeAttribute('hx-get'); else this.form.setAttribute('hx-get', '/Library/SearchResults');" />
            </div>

            <!-- Search button -->
            <div class="col-12 col-md-3">
                <button class="btn btn-outline-primary w-100" type="submit">
                    <i class="bi bi-search me-2"></i>
                    @I18n.Search
                </button>
            </div>

            <!-- Hidden agent input -->
            <input type="hidden" name="selectedAgent" id="selectedAgent" />
        </form>
    </div>

    <div id="search-results" class="row row-cols-1 row-cols-md-3 g-4 mb-5" hx-swap="innerHTML"></div>
</div>

