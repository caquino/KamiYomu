@page
@using KamiYomu.Web.Areas.Libraries.Pages.Collection
@model IndexModel
@{
}


@section Scripts {
    <script>
        function selectSite(id, label, faviconUrl) {
          document.getElementById('selectedAgent').value = id;
          document.getElementById('selectedAgentLabel').textContent = label;
          document.getElementById('selectedAgentFavicon').src = faviconUrl;
          document.getElementById('searchInput').dispatchEvent(new Event('change'));
        }
    </script>
}

<div class="d-flex justify-content-between align-items-center m-3">
    <h2 class="h5 mb-0 text-primary">
        <i class="bi bi-book me-3" aria-hidden="true"></i>
        @I18n.YourCollection
    </h2>
</div>

<div class="container py-4">
    <div class="d-flex align-items-start gap-3 mb-4">
        <div class="flex-grow-1">
            <!-- Wrap input group in a form -->
            <form class="input-group input-group-lg"
                  hx-get="/Libraries/Collection/SearchResults?handler=search"
                  hx-target="#search-results"
                  hx-include="#selectedAgent">

                @Html.AntiForgeryToken()
                <!-- Search input -->
                <input type="text"
                       class="form-control flex-grow-1"
                       placeholder="@I18n.SearchManga"
                       name="query"
                       id="searchInput"
                       oninput="if (!document.getElementById('selectedAgent').value) this.form.removeAttribute('hx-get'); else this.form.setAttribute('hx-get', '/Library/SearchResults');" />

                <!-- Search button -->
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-search"></i>
                </button>

                <!-- Hidden agent input -->
                <input type="hidden" name="selectedAgent" id="selectedAgent" />
            </form>
        </div>
    </div>

    <!-- Results container -->
    <div id="search-results" class="row row-cols-1 row-cols-md-3 g-4 mb-5" hx-swap="innerHTML"></div>

    <!-- Initial load -->
    <div hx-get="/Libraries/Collection/SearchResults?handler=search"
         hx-target="#search-results"
         hx-trigger="load"
         style="display:none"></div>
</div>

