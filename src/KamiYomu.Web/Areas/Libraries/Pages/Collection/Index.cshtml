@page
@model KamiYomu.Web.Areas.Libraries.Pages.Mangas.IndexModel
@{
}


@section Scripts {
    <script>
        function selectSite(id, label, faviconUrl) {
          document.getElementById('selectedAgent').value = id;
          document.getElementById('selectedAgentLabel').textContent = label;
          document.getElementById('selectedAgentFavicon').src = faviconUrl;
          document.getElementById('searchInput').dispatchEvent(new Event('change'));
        }
    </script>
}

<div class="d-flex justify-content-between align-items-center m-3">
    <h2 class="h5 mb-0 text-primary">
        <i class="bi bi-book me-3" aria-hidden="true"></i>
        @I18n.YourCollection
    </h2>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a asp-area="Libraries"
               asp-page="/Downloads/Index"
               class="btn btn-sm btn-outline-secondary"
               title="@I18n.Download"
               aria-label="Add new agent">
                <i class="bi bi-cloud-download me-2"></i> @I18n.Download
            </a>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="d-flex align-items-start gap-3 mb-4">
        <div class="flex-grow-1">
            <div class="input-group input-group-lg">
                <input type="text"
                       class="form-control flex-grow-1"
                       placeholder="@I18n.SearchManga"
                       name="query"
                       id="searchInput"
                       hx-get="/Libraries/Mangas/SearchResults?handler=search"
                       hx-target="#search-results"
                       hx-trigger="keyup changed delay:300ms"
                       hx-include="#selectedAgent"
                       oninput="if (!document.getElementById('selectedAgent').value) this.removeAttribute('hx-get'); else this.setAttribute('hx-get', '/Library/SearchResults');" />

                <button class="btn btn-outline-primary" type="button" onclick="document.getElementById('searchInput').dispatchEvent(new Event('change'))">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

    </div>

    <div id="search-results" class="row row-cols-1 row-cols-md-3 g-4 mb-5" hx-swap="innerHTML"></div>

    <div hx-get="/Libraries/Mangas/SearchResults?handler=search"
         hx-target="#search-results"
         hx-trigger="load"
         style="display:none"></div>
</div>

