@page
@using KamiYomu.Web.Areas.Libraries.Pages.Collection
@model IndexModel


@section Scripts {
    <script>
        function selectSite(id, label, faviconUrl) {
          document.getElementById('selectedAgent').value = id;
          document.getElementById('selectedAgentLabel').textContent = label;
          document.getElementById('selectedAgentFavicon').src = faviconUrl;
          document.getElementById('searchInput').dispatchEvent(new Event('change'));
        }
    </script>
}

<div class="d-flex justify-content-between align-items-center m-3">
    <h2 class="h5 mb-0 text-primary">
        <i class="bi bi-book me-3" aria-hidden="true"></i>
        @I18n.YourCollection
    </h2>
</div>

<div class="container py-4">

    <div class="mt-3 search-bar">
        <div class="mb-3">
            <div class="row g-2">
                <div class="col-12 col-md-5">
                    <input type="text"
                           asp-for="Query"
                           class="form-control w-100"
                           placeholder="@I18n.SearchManga"
                           hx-trigger="keyup[key=='Enter']"
                           hx-on:keyup="if(event.key === 'Enter') document.getElementById('search-btn').click()" />
                </div>

                <div class="col-12 col-md-3">
                    <button type="button"
                            hx-get="@Url.Page("/Collection/Index", new { area = "Libraries", handler = "Search" })"
                            hx-target="#search-results"
                            hx-swap="innerHTML"
                            hx-include="closest .search-bar"
                            hx-push-url="true"
                            id="search-btn"
                            class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i>
                        @I18n.Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Results container -->
    <div id="search-results" class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        <vc:search-manga-result 
            libraries="@Model.Results" 
            search-uri="@Url.Page("/Collection/Index", new {
            Area= "Libraries",
            Handler = "Search",
            Query = ViewData[nameof(Model.Query)],
            SelectedAgent = ViewData[nameof(Model.SelectedAgent)],
            OffSet = ViewData[nameof(Model.Offset)],
            Limit = ViewData[nameof(Model.Limit)],
            ContinuationToken = ViewData[nameof(Model.ContinuationToken)]
       })"/>
    </div>

</div>

