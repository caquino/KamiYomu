@page
@using KamiYomu.Web.Entities
@using KamiYomu.Web.Extensions
@model KamiYomu.Web.Areas.Libraries.Pages.Collection.Dialogs.DownloadChapterTableModel
@{
    Layout = null;
}

<div class="table-responsive" id="downloads-table">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-secondary">
            <tr>
                <th scope="col">
                    <a href="#"
                       hx-get="@Url.Page("DownloadChapterTable", new { libraryId = Model.LibraryId, sort = nameof(ChapterDownloadRecord.Chapter), asc = !Model.SortAsc, page = Model.CurrentPage })"
                       hx-target="#downloads-table" hx-swap="outerHTML" class="text-decoration-none">
                        @I18n.Chapter
                        @if (Model.SortColumn == "Chapter")
                        {
                            <i class="bi @(Model.SortAsc ? "bi-caret-up-fill" : "bi-caret-down-fill") ms-1"></i>
                        }
                    </a>
                </th>

                <th scope="col">
                    @I18n.Size
                </th>

                <th scope="col">
                    <a href="#"
                       hx-get="@Url.Page("DownloadChapterTable", new { libraryId = Model.LibraryId, sort = nameof(ChapterDownloadRecord.DownloadStatus), asc = !Model.SortAsc, page = Model.CurrentPage })"
                       hx-target="#downloads-table" hx-swap="outerHTML" class="text-decoration-none">
                        @I18n.Status
                        @if (Model.SortColumn == nameof(ChapterDownloadRecord.DownloadStatus))
                        {
                            <i class="bi @(Model.SortAsc ? "bi-caret-up-fill" : "bi-caret-down-fill") ms-1"></i>
                        }
                    </a>
                </th>

                <th scope="col">
                    <a href="#"
                       hx-get="@Url.Page("DownloadChapterTable", new { libraryId = Model.LibraryId, sort = nameof(ChapterDownloadRecord.StatusUpdateAt), asc = !Model.SortAsc, page = Model.CurrentPage })"
                       hx-target="#downloads-table" hx-swap="outerHTML" class="text-decoration-none">
                        @I18n.LastUpdate
                        @if (Model.SortColumn == nameof(ChapterDownloadRecord.StatusUpdateAt))
                        {
                            <i class="bi @(Model.SortAsc ? "bi-caret-up-fill" : "bi-caret-down-fill") ms-1"></i>
                        }
                    </a>
                </th>
                  <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.Records)
            {
                <partial name="_DownloadChapterTableRow" model="record" />
            }
        </tbody>
    </table>

    <!-- Pagination -->
    @{
        int totalPages = Model.TotalPages;
        int currentPage = Model.CurrentPage;

        int edgeCount = 3;

        int window = 3;

        bool ShouldShow(int page)
        {
            if (page <= edgeCount || page > totalPages - edgeCount) return true;

            if (Math.Abs(page - currentPage) <= window) return true;

            return false;
        }
    }

    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                if (ShouldShow(i))
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                           hx-get='@Url.Page("DownloadChapterTable", new { libraryId = Model.LibraryId, sort = Model.SortColumn, asc = Model.SortAsc, pageIndex = i })'
                           hx-target="#downloads-table"
                           hx-swap="outerHTML">
                            @i
                        </a>
                    </li>
                }
                else if (i == edgeCount + 1 || i == totalPages - edgeCount)
                {
                    <li class="page-item disabled"><span class="page-link">…</span></li>
                }
            }
        </ul>
    </nav>
</div>