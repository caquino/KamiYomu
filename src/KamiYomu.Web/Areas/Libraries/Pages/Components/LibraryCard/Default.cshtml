@using KamiYomu.Web.Areas.Libraries.ViewComponents
@using KamiYomu.Web.Extensions
@model LibraryCardViewComponentModel

<div class="col" id="@Model.CardId">
    <div class="card h-100 bg-light-subtle">
        <img src="@Model.Library.Manga.CoverUrl.ToInternalImageUrl()" class="card-img-top" alt="@Model.Library.Manga.Title" style="object-fit: cover; height: 300px;">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold">@Model.Library.Manga.Title</h5>

            <div class="mb-3">
                <span class="fw-semibold">@I18n.Status:</span>
                <span class="ms-1 text-muted">@Model.Library.Manga.ReleaseStatus</span>
            </div>

            <div class="mb-3 d-flex align-items-center">
                <span class="fw-semibold me-2">@I18n.CrawlerAgent:</span>
                <img src="@Model.FaviconUrl.ToInternalImageUrl()" width="20" class="me-2" alt="favicon" />
                <span class="text-muted">@Model.Library.CrawlerAgent.DisplayName</span>
            </div>

            @if (!Model.IsNew)
            {
                <vc:download-progress library="@Model.Library" />
            }

            <div class="mt-auto d-flex justify-content-end">
                <div class="btn-group dropup">
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary dropdown-toggle"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <i class="bi bi-list"></i> @I18n.Actions
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <button class="dropdown-item"
                                    hx-get="@Model.MangaDetailsUrl"
                                    hx-target="#modal-body"
                                    hx-swap="innerHTML"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modal">
                                <i class="bi bi-info-circle me-2"></i> @I18n.Details
                            </button>
                        </li>
                        @if (Model.IsNew)
                        {
                            <li>
                                <button class="dropdown-item bg-success text-light"
                                        hx-get="@Model.AddToCollectionUrl"
                                        hx-target="#modal-body"
                                        hx-swap="innerHTML"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modal">
                                    <i class="bi bi-plus-circle me-2"></i> @I18n.AddToYourCollection
                                </button>
                            </li>
                        }
                        else
                        {
                            <li>
                                <button class="dropdown-item"
                                        hx-get="@Model.DownloadStatusUrl"
                                        hx-target="#modal-body"
                                        hx-swap="innerHTML"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modal">
                                    <i class="bi bi-cloud-download me-2"></i> @I18n.DownloadStatus
                                </button>
                            </li>
                            <li>
                                <button class="dropdown-item bg-danger text-light"
                                        hx-get="@Model.RemoveFromCollectionUrl"
                                        hx-target="#modal-body"
                                        hx-swap="innerHTML"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modal">
                                    <i class="bi bi-x-circle me-2"></i> @I18n.RemoveFromYourCollection
                                </button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

