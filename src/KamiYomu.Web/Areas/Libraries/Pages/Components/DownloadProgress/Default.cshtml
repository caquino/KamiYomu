@using KamiYomu.Web.Areas.Libraries.ViewComponents

@model DownloadProgressViewComponentModel

<div class="mb-2">
    <div class="fw-semibold mb-1">
        @I18n.DownloadProgress
    </div>

    <div class="progress" style="background-color: var(--bs-gray-600);">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
             role="progressbar"
             style="width: @Model.Progress.ToString("F0")%;"
             aria-valuenow="@Model.Progress.ToString("F0")"
             aria-valuemin="0"
             aria-valuemax="100">
            @Model.Progress.ToString("F0")%
        </div>
    </div>

</div>

<div class="d-flex flex-column flex-sm-row gap-3 my-2">
    <div class="flex-fill p-3 border rounded shadow-sm">
        <div class="small fw-semibold text-muted mb-1 text-uppercase">@I18n.ChaptersFound</div>
        <div class="d-flex align-items-baseline gap-2">
            <span class="h3 mb-0">@Model.Total</span>
            <vc:badge-manga-download-status manga-download-record="@Model.DownloadManga" />
        </div>
    </div>

    <div class="flex-fill p-3 border rounded shadow-sm">
        <div class="small fw-semibold text-muted mb-1 text-uppercase">@I18n.Downloaded</div>
        <div class="d-flex align-items-baseline gap-2">
            <span class="h3 mb-0 text-success">@Model.Completed</span>
            <span class="text-muted small">/ @Model.Total</span>
        </div>
    </div>
</div>
