@using KamiYomu.Web.Extensions
@model KamiYomu.Web.Entities.Library

@{
    Layout = null;
    using var crawlerInstance = Model.CrawlerAgent.GetCrawlerInstance();
    var faviconUrl = await crawlerInstance.GetFaviconAsync(CancellationToken.None);
    var isNew = Model.Id == Guid.Empty;
    var cardId = $"library-card-{Model.Manga.Id}".Replace(".", "-");
}

<div class="col" id="@cardId">
    <div class="card h-100 bg-light-subtle">
        <img src="@Model.Manga.CoverUrl.ToInternalImageUrl()" class="card-img-top" alt="@Model.Manga.Title" style="object-fit: cover; height: 300px;">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold">@Model.Manga.Title</h5>

            <div class="mb-3">
                <span class="fw-semibold">@I18n.Status:</span>
                <span class="ms-1 text-muted">@Model.Manga.ReleaseStatus</span>
            </div>

            <div class="mb-3 d-flex align-items-center">
                <span class="fw-semibold me-2">@I18n.CrawlerAgent:</span>
                <img src="@faviconUrl.ToInternalImageUrl()" width="20" class="me-2" alt="favicon" />
                <span class="text-muted">@Model.CrawlerAgent.DisplayName</span>
            </div>


            <div class="mt-auto d-flex justify-content-end">
                <div class="btn-group dropup">
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary dropdown-toggle"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <i class="bi bi-list"></i> @I18n.Actions
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <button class="dropdown-item"
                                    hx-get="/Libraries/Collection/Dialogs/MangaDetails?agentId=@Model.CrawlerAgent.Id&mangaId=@Model.Manga.Id"
                                    hx-target="#modal-body"
                                    hx-swap="innerHTML"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modal">
                                <i class="bi bi-info-circle me-2"></i> @I18n.Details
                            </button>
                        </li>
                        @if (isNew)
                        {
                            <li>
                                <form method="post"
                                      hx-post="/Libraries/Downloads/Index?handler=AddToCollection"
                                      hx-target="#@cardId"
                                      hx-swap="innerHTML">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="MangaId" value="@Model.Manga.Id" />
                                    <input type="hidden" name="AgentId" value="@Model.CrawlerAgent.Id" />
                                    <button type="submit" class="dropdown-item bg-success text-light">
                                        <i class="bi bi-plus-circle me-2"></i> @I18n.AddToYourCollection
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li>
                                <button class="dropdown-item"
                                        hx-get="/Libraries/Collection/Dialogs/DownloadStatus?libraryId=@Model.Id"
                                        hx-target="#modal-body"
                                        hx-swap="innerHTML"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modal">
                                    <i class="bi bi-cloud-download me-2"></i> @I18n.DownloadStatus
                                </button>
                            </li>
                            <li>
                                <button class="dropdown-item bg-danger text-light"
                                        hx-get="/Libraries/Collection/Dialogs/RemoveFromCollection?LibraryId=@Model.Id&RefreshElementId=@cardId"
                                        hx-target="#modal-body"
                                        hx-swap="innerHTML"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modal">
                                    <i class="bi bi-x-circle me-2"></i> @I18n.RemoveFromYourCollection
                                </button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

