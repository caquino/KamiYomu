@page
@using KamiYomu.Web.Extensions
@using KamiYomu.Web.Areas.Reader.Pages.History;
@model IndexModel
@{
}

@section Head
{
    <style>
        /* Ensure the parent item has a fixed height and relative context */
        .history-item {
            position: relative;
            display: flex;
            align-items: center;
            min-height: 80px; /* Force a standard height */
            height: 80px;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 0.75rem;
            z-index: 1;
        }

        /* The progress fill uses the parent's 100% height */
        .history-progress-fill {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            background-color: rgba(25, 135, 84, 0.12); /* Subtle Green */
            z-index: 2;
        }

        .history-cover-container {
            position: relative; /* Change from absolute to relative to sit in the flex flow */
            width: 150px;
            min-width: 60px;
            height: 100%;
            z-index: 3;
        }

            .history-cover-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                opacity: 0.5;
                display: block;
            }

        .history-content {
            position: relative;
            flex-grow: 1;
            z-index: 4;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 1rem;
        }

    </style>
}
<header class="reader-header bg-dark text-white p-2 border-bottom border-secondary d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-2">
        <a asp-area="Reader"
           asp-page="/MangaGallery/Index"
           class="btn btn-sm btn-outline-light border-0">
            <i class="bi bi-chevron-left"></i>
        </a>
    </div>
</header>

<div class="container py-5">


    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history me-2"></i>Reading History</h2>
        <button class="btn btn-outline-primary btn-sm"
                hx-get="/History"
                hx-target="#history-container"
                hx-select="#history-container">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>

    <div id="history-container">
        <partial name="_HistoryListPartial" model="@Model" />
    </div>

    <div id="load-indicator" class="htmx-indicator text-center py-3">
        <div class="spinner-border spinner-border-sm text-success" role="status"></div>
    </div>
</div>
