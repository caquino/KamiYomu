@page
@using KamiYomu.Web.Extensions
@using KamiYomu.Web.Areas.Reader.Pages.History;
@model IndexModel
@{
}

<header class="reader-header p-2 border-bottom border-secondary d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-2">
        <a asp-area="Reader"
           asp-page="/MangaGallery/Index"
           class="btn btn-sm btn-outline-secondary border-0">
            <i class="bi bi-chevron-left"></i>
        </a>
    </div>
</header>

<div class="container py-5">


    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history me-2"></i>Reading History</h2>
        <button class="btn btn-outline-primary btn-sm"
                hx-get="/History"
                hx-target="#history-container"
                hx-select="#history-container">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>

    <div id="history-container">
        <partial name="_HistoryListPartial" model="@Model" />
    </div>

    <div id="load-indicator" class="htmx-indicator text-center py-3">
        <div class="spinner-border spinner-border-sm text-success" role="status"></div>
    </div>
</div>
