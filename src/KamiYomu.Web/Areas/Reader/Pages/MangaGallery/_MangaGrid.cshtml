@using KamiYomu.CrawlerAgents.Core.Catalog
@using KamiYomu.Web.Entities
@using KamiYomu.Web.Extensions
@model List<Library>

@foreach (var library in Model)
{
    <div class="col">
        <a asp-area="Reader"
           asp-page="/MangaInfo/Index"
           asp-route-mangaId="@library.Manga.Id"
           asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")"
           class="card h-100 manga-card text-decoration-none shadow-sm">
            <img src="@library.Manga.CoverUrl.ToInternalImageUrl()" class="card-img-top" alt="@library.Manga.Title">

            <div class="card-body d-flex flex-column">
                <h6 class="card-title text-truncate mb-1">@library.Manga.Title</h6>

                <p class="card-text small text-muted mb-2 text-truncate">
                    @if (library.Manga.Authors != null && library.Manga.Authors.Any())
                    {
                        <span>@I18n.By @string.Join(", ", library.Manga.Authors)</span>
                    }
                    else
                    {
                        <span>@I18n.UnknownAuthor</span>
                    }
                </p>

                <p class="card-text small text-muted mb-2 text-truncate">
                    <span>@library.Manga.Year</span>
                </p>

                <div class="mt-auto card-tags">
                    @if (library.Manga.Tags != null)
                    {
                        @foreach (var tag in library.Manga.Tags.Take(3))
                        {
                            <span class="badge rounded-pill bg-primary-subtle text-primary border border-primary-subtle small-badge">
                                @tag
                            </span>
                        }
                    }
                </div>
            </div>
        </a>
    </div>
}

<style>
    .small-badge {
        font-size: 0.65rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.02em;
    }

    .card-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        overflow: hidden;
        max-height: 24px; /* Keeps tags to a single row */
    }

    .manga-card {
        border: 1px solid rgba(0,0,0,.125);
        transition: border-color 0.2s, transform 0.2s;
    }

    /* Dark Mode specific badge adjustments if using Bootstrap 5.3+ */
    [data-bs-theme="dark"] .small-badge {
        background-color: rgba(114, 83, 237, 0.2) !important;
        color: #a28df2 !important;
        border-color: #7253ed !important;
    }

</style>
