@page
@using KamiYomu.Web.Areas.Reader.Pages.MangaGallery
@model IndexModel
@{
}
<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div class="col-12 col-md-8">
            <div class="input-group">
                <span class="input-group-text border-end-0">
                    <i class="bi bi-search text-muted"></i>
                </span>

                <input type="text" id="mangaSearch" name="search" class="form-control border-start-0 border-end-0"
                       placeholder="@I18n.SearchManga"
                       hx-get="@Url.Page("/MangaGallery/Index", new { area = "Reader", handler = "Search" })"
                       hx-target="#manga-grid"
                       hx-push-url="true"
                       value="@Model.Search"
                       hx-trigger="keyup changed delay:500ms">

                <button class="btn btn-primary"
                        hx-get="@Url.Page("/MangaGallery/Index", new { area = "Reader", handler = "Search" })"
                        hx-target="#manga-grid"
                        hx-push-url="true"
                        hx-include="#mangaSearch">
                    @I18n.Search
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-lg-8">

        <h5 class="mb-3 border-bottom pb-2">@I18n.Manga</h5>
        <div id="manga-grid">
            <partial name="_PagedMangaGrid" model="Model" />
        </div>


        <h5 class="mb-3 border-bottom pb-2">@I18n.RecentlyAdded</h5>
        <div class="row row-cols-1 row-cols-xl-2 g-3 mb-3" id="recently-manga-grid">
            <partial name="_MangaGrid" model="Model.RecentlyAddedLibraries" />
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <section class="mb-5">
            <h5 class="mb-3 border-bottom pb-2">
                <i class="bi bi-clock-history me-2 text-primary"></i> @I18n.ReadingHistory
            </h5>

            @if (Model.GroupedHistory.Any())
            {
                <div class="history-list">
                    @foreach (var dateGroup in Model.GroupedHistory)
                    {
                        <div class="date-label small fw-bold text-muted mb-2 mt-4 text-uppercase">
                            @dateGroup.Key.ToLongDateString()
                        </div>

                        <ul class="list-unstyled mb-0">
                            @foreach (var entry in dateGroup)
                            {
                                <li class="mb-2">
                                    <vc:history-item view-model="entry" />
                                </li>
                            }
                        </ul>
                    }
                </div>

                <div class="mt-3">
                    <a class="text-decoration-none fw-bold" asp-area="Reader" asp-page="/History/Index">
                        @I18n.ViewAllHistory <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            }
            else
            {
                <p class="text-muted small py-3">No recent history found.</p>
            }
        </section>

        <section>
            <h5 class="mb-3 border-bottom pb-2">
                <i class="bi bi-calendar-week me-2 text-primary"></i> @I18n.WeekChapters
            </h5>
            <vc:weekly-chapter />
        </section>
    </div>
</div>
