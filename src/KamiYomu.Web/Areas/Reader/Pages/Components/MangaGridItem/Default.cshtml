@using KamiYomu.Web.Entities
@model Library

<div class="col">
    <a asp-area="Reader"
       asp-page="/MangaInfo/Index"
       asp-route-libraryId="@Model.Id"
       asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")"
       class="card h-100 manga-card text-decoration-none shadow-sm overflow-hidden">

        <div class="row g-0 h-100">
            <div class="col-4 col-md-3">
                <img src="@Model.Manga.CoverUrl.ToInternalImageUrl()"
                     class="img-fluid h-100 object-fit-cover"
                     alt="@Model.Manga.Title"
                     style="min-height: 150px;">
            </div>

            <div class="col-8 col-md-9">
                <div class="card-body d-flex flex-column h-100">
                    <h6 class="card-title text-truncate mb-1">@Model.Manga.Title</h6>

                    <p class="card-text small text-muted mb-1 text-truncate">
                        @if (Model.Manga.Authors != null && Model.Manga.Authors.Any())
                        {
                            <span>@I18n.By @string.Join(", ", Model.Manga.Authors)</span>
                        }
                        else
                        {
                            <span>@I18n.UnknownAuthor</span>
                        }
                    </p>

                    <p class="card-text small text-muted mb-2">
                        <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">
                            @(Model.Manga.Year != null ? Model.Manga.Year.ToString() : "N/A")
                        </span>
                    </p>

                    <div class="mt-auto card-tags">
                        @if (Model.Manga.Tags != null)
                        {
                            @foreach (var tag in Model.Manga.Tags.Take(3))
                            {
                                <span class="badge rounded-pill bg-primary-subtle text-primary border border-primary-subtle small-badge">
                                    @tag
                                </span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
