@using KamiYomu.Web.Areas.Reader.Pages.MangaReader
@model IndexModel 

<footer class="reader-footer border-top border-secondary">
    <div class="progress rounded-0" style="height: 4px; background-color: rgba(255,255,255,0.1);">
        <div id="readerProgressBar" 
             class="progress-bar bg-primary" 
             role="progressbar" 
             style="width: 0%; transition: width 0.2s ease;"></div>
    </div>

    <div class="container-fluid py-2 d-flex justify-content-between align-items-center">
        <div class="flex-1">
            <button class="btn btn-sm btn-outline-primary d-flex align-items-center gap-2 px-3"
                    onclick="prevPage()" 
                    title="Previous Page (Left Arrow)">
                <i class="bi bi-arrow-left"></i>
                <span class="d-none d-md-inline">@I18n.Previous</span>
            </button>
        </div>

        <div class="flex-grow-1 d-flex justify-content-center align-items-center">
            <div class="page-indicator-badge d-flex align-items-center bg-secondary bg-opacity-25 rounded-pill px-3 py-1">
                <span class="small text-muted me-2">PAGE</span>
                <span id="currentPageDisplay" class="fw-bold text-primary">1</span>
                <span class="mx-1 text-muted">/</span>
                <span class="small text-muted">@Model.PageUrls.Count</span>
            </div>
        </div>

        <div class="flex-1 text-end">
            <button class="btn btn-sm btn-outline-primary d-flex align-items-center gap-2 px-3 ms-auto" 
                    onclick="nextPage()" 
                    title="Next Page (Right Arrow)">
                <span class="d-none d-md-inline">@I18n.Next</span>
                <i class="bi bi-arrow-right"></i>
            </button>
        </div>
    </div>
</footer>

<style>
    .reader-footer {
        flex-shrink: 0; /* Prevents the footer from squishing */
        user-select: none;
    }

    .page-indicator-badge {
        min-width: 100px;
        justify-content: center;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .flex-1 {
        flex: 1;
    }
</style>
