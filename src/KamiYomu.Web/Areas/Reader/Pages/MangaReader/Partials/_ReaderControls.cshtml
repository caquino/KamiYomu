<div class="d-grid gap-4">
    <div>
        <label class="form-label small text-muted text-uppercase fw-bold">@I18n.ReadingMode</label>
        <div class="btn-group w-100" role="group">
            <input type="radio" class="btn-check" name="vmode" id="m1" value="webtoon" checked onchange="changeMode(this.value)">
            <label class="btn btn-outline-primary" for="m1"><i class="bi bi-distribute-vertical"></i></label>

            <input type="radio" class="btn-check" name="vmode" id="m2" value="ltr" onchange="changeMode(this.value)">
            <label class="btn btn-outline-primary" for="m2">LTR</label>

            <input type="radio" class="btn-check" name="vmode" id="m3" value="rtl" onchange="changeMode(this.value)">
            <label class="btn btn-outline-primary" for="m3">RTL</label>
        </div>
    </div>

    <div>
        <label class="form-label small text-muted text-uppercase fw-bold">@I18n.Zoom / @I18n.Width</label>
        <div class="input-group">
            <button class="btn btn-secondary" onclick="adjustZoom(-0.1)"><i class="bi bi-dash"></i></button>
            <input type="text" id="zoomVal" class="form-control bg-dark text-white text-center" value="100%" readonly>
            <button class="btn btn-secondary" onclick="adjustZoom(0.1)"><i class="bi bi-plus"></i></button>
        </div>
    </div>

    <div class="d-grid gap-2">
        <button class="btn btn-outline-info" onclick="toggleFullscreen()">
            <i class="bi bi-fullscreen"></i> @I18n.Fullscreen
        </button>
        <button class="btn btn-outline-warning" onclick="window.scrollTo(0,0)">
            <i class="bi bi-arrow-up-circle"></i> Top
        </button>
    </div>
</div>
