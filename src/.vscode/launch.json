{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to .NET Core in Docker",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "preLaunchTask": "prepare docker debug with browser",
      "pipeTransport": {
        "pipeProgram": "docker",
        "pipeArgs": [
          "exec",
          "-i",
          "kamiyomu.web"
        ],
        "debuggerPath": "/vsdbg/vsdbg",
        "pipeCwd": "${workspaceFolder}",
        "quoteArgs": false
      },
      "sourceFileMap": {
        "/app": "${workspaceFolder}/KamiYomu.Web",
        "/src": "${workspaceFolder}"
      },
      "justMyCode": false,
      "logging": {
        "diagnosticsLog": {
          "protocolMessages": true,
          "engineLogging": true,
          "exceptions": true,
        },
        "moduleLoad": true,
        "trace": true
      }
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}